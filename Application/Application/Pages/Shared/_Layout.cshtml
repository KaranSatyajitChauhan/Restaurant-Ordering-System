<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - K G Restaurant</title>

    <!-- Add these two lines right here -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="auth-theme">
    <div class="auth-background">
        <div class="auth-container">
            <header class="auth-header">
                <div class="auth-logo">
                    <img src="~/images/kg-restaurant-logo.svg" alt="K G Restaurant" class="restaurant-logo" />
                    <h1>K G Restaurant</h1>
                </div>
                @RenderSection("Header", required: false)
            </header>

            <main role="main">
                @RenderBody()
            </main>

            <footer class="auth-footer">
                <p>&copy; @DateTime.Now.Year - K G Restaurant</p>
            </footer>
        </div>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>