<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - K G Restaurant</title>

    <!-- Font Awesome and Bootstrap -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Your existing styles -->
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="auth-theme">
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-gray-900 border-bottom border-secondary">
        <div class="container">
            <a class="navbar-brand" href="/">
                <img src="~/images/kg-restaurant-logo.svg" height="40" class="d-inline-block align-top" alt="K G Restaurant">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Index">
                            <i class="fas fa-utensils me-1"></i>Menu
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/OrderHistory">
                            <i class="fas fa-history me-1"></i>My Orders
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/TrackOrder">
                            <i class="fas fa-map-marker-alt me-1"></i>Track Order
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user-circle me-1"></i>Account
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end bg-black border-secondary">
                            <li>
                                <a class="dropdown-item text-white no-hover-effect" href="/Profile">
                                    <i class="fas fa-user me-1"></i>Profile
                                </a>
                            </li>
                            <li><hr class="dropdown-divider border-secondary"></li>
                            <li>
                                <a class="dropdown-item text-white no-hover-effect" href="/Logout">
                                    <i class="fas fa-sign-out-alt me-1"></i>Logout
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-primary ms-2" href="/Cart">
                            <i class="fas fa-shopping-cart me-1"></i>Cart
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="auth-background">
        <div class="auth-container">
            <header class="auth-header">
                @if (!Context.Request.Path.StartsWithSegments("/Menu"))
                {
                    <div class="auth-logo">
                        <img src="~/images/kg-restaurant-logo.svg" alt="K G Restaurant" class="restaurant-logo" />
                        <h1>K G Restaurant</h1>
                    </div>
                }
                @RenderSection("Header", required: false)
            </header>

            <main role="main">
                @RenderBody()
            </main>

            <footer class="auth-footer">
                <p>&copy; @DateTime.Now.Year - K G Restaurant</p>
                <div class="mt-2">
                    <a href="/Privacy" class="text-muted me-3">Privacy Policy</a>
                    <a href="/Terms" class="text-muted me-3">Terms of Service</a>
                    <a href="/Contact" class="text-muted">Contact Us</a>
                </div>
            </footer>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Navigation Script -->
    <script>
        // Highlight current page in navigation
        document.addEventListener('DOMContentLoaded', function() {
            const currentPath = window.location.pathname;
            document.querySelectorAll('.nav-link').forEach(link => {
                if (link.getAttribute('href') === currentPath) {
                    link.classList.add('active');
                }
            });
        });
    </script>
</body>
</html>